<main class="tradegrid">
    <section class="token-inventory">
        <main class="inventory-wrapper" data-event-target="token" data-event-action="{{#ifeq lootsheettype "Merchant"}}buy{{else}}loot{{/ifeq}}">
            {{> "modules/lootsheetnpc5e/templates/partials/trade/inventory.hbs" inventoryData=actor.lootableItems mode="npc"}}
        </main>
    </section>
    <section class="token-info flairbox">
        <h4>{{actor.name}}</h4>
        <aside class="currency">
            {{> "modules/lootsheetnpc5e/templates/partials/trade/currency.hbs"}}
        </aside>
        <!-- a box with a dropzone to accept items -->
    </section>

    <section class="stage dropzone" dropzone="true">
        <main data-event-target="{{#ifeq lootsheettype "Merchant"}}sell{{else}}give{{/ifeq}}" data-event-action="player">
            <header>
                <h3>{{#ifeq lootsheettype "Merchant"}}Sell{{else}}Give{{/ifeq}}</h3>
            </header>
            <ul class="inventory-list inventory-condensed" data-document-type="Item">
            </ul>
        </main>
        <main data-event-target="{{#ifeq lootsheettype "Merchant"}}buy{{else}}loot{{/ifeq}}" data-event-action="token">
            <header>{{#ifeq lootsheettype "Merchant"}}Buy{{else}}Take{{/ifeq}}</header>
            <ul class="inventory-list inventory-condensed" data-document-type="Item">
            </ul>
            <footer>
                <button class="lsnpc-action-link" type="button" data-action="tradeItems">
                    {{#ifeq lootsheettype "Merchant"}}Trade{{else}}Confirm{{/ifeq}}
                </button>
                {{> "modules/lootsheetnpc5e/templates/partials/buttons/lootAll.hbs" }}
            </footer>
        </main>
    </section>
    <section class="player-info flairbox">
        <h4>{{interactingActor}}</h4>
        <aside class="currency">
            {{> "modules/lootsheetnpc5e/templates/partials/trade/currency.hbs" data=interactingActorFunds}}
        </aside>
    </section>
    <section class="player-inventory">
        <main class="inventory-wrapper" data-event-target="player" data-event-action="{{#ifeq lootsheettype "Merchant"}}sell{{else}}give{{/ifeq}}">
            {{> "modules/lootsheetnpc5e/templates/partials/trade/inventory.hbs" inventoryData=actor.playerInventory mode="player"}}
        </main>
    </section>
</main>
